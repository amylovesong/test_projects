<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sun.checkticketslidebutton.MainActivity">

    <com.sun.checkticketslidebutton.CheckTicketSlideView
        android:id="@+id/check_ticket_slide_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/provider_60dp"
        android:layout_centerVertical="true"/>

    <com.sun.checkticketslidebutton.CheckTicketSlideView
        android:visibility="visible"
        android:id="@+id/check_ticket_slide_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/provider_60dp"
        android:layout_marginTop="@dimen/provider_1dp"
        android:layout_below="@id/check_ticket_slide_view"/>

    <Button
        android:id="@+id/btn_click"
        android:layout_width="@dimen/provider_100dp"
        android:layout_height="@dimen/provider_50dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:text="Click"/>

</RelativeLayout>
